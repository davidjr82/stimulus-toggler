@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
    .example:not(.tabs) button {
        @apply bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 m-4 rounded;
    }

    .example:not(.tabs) div {
        @apply p-4 m-4 rounded-lg shadow-lg h-14;
    }

    .example:not(.tabs) div.bg {
        @apply bg-fuchsia-500;
    }
}
